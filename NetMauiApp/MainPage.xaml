<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetMauiApp.MainPage"
             Loaded="OnMainPageLoaded">

    <Grid RowDefinitions="50, *, 50, *, 40"
          ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*"
          Padding="20">

        <BoxView Grid.Column="0"
                 Grid.ColumnSpan="100"
                 Grid.Row="0"
                 Color="Red" />
        <BoxView Grid.Column="0"
                 Grid.ColumnSpan="100"
                 Grid.Row="1"
                 Color="DarkOrange" />
        <BoxView Grid.Column="0"
                 Grid.ColumnSpan="100"
                 Grid.Row="2"
                 Color="Orange" />
        <BoxView Grid.Column="0"
                 Grid.ColumnSpan="100"
                 Grid.Row="3"
                 Color="Green" />
        <BoxView Grid.Column="0"
                 Grid.ColumnSpan="100"
                 Grid.Row="4"
                 Color="LightGreen" />

        <Label Grid.Column="0"
               Grid.ColumnSpan="25"
               Grid.Row="0"
               x:Name="AllSalesLbl"
               Text="All"
               SemanticProperties.HeadingLevel="Level1"
               FontSize="32"
               HorizontalOptions="Start"
               VerticalOptions="Start"/>

        <Button Grid.Column="35"
                Grid.ColumnSpan="10"
                Grid.Row="0"
                x:Name="UpdateBtn"
                Text="Update"
                SemanticProperties.Hint="Updates the 'all' table"
                VerticalOptions="Start"
                FontSize="16"
                Scale="1"
                HeightRequest="40"
                Clicked="OnUpdateClicked"/>

        <Label Grid.Column="53"
               Grid.ColumnSpan="45"
               Grid.Row="0"
               x:Name="MonthlySalesLbl"
               Text="Monthly"
               SemanticProperties.HeadingLevel="Level1"
               FontSize="32"
               VerticalOptions="Start" />

        <Label Grid.Column="53"
               Grid.ColumnSpan="45"
               Grid.Row="2"
               x:Name="YearlySalesLbl"
               Text="Yearly"
               SemanticProperties.HeadingLevel="Level1"
               FontSize="32"
               VerticalOptions="Start" />

        <Label Grid.Column="0"
               Grid.ColumnSpan="10"
               Grid.Row="4"
               x:Name="RestLbl"
               Text="Rest:"
               SemanticProperties.HeadingLevel="Level1"
               FontSize="20"
               VerticalTextAlignment="Center"
               HorizontalOptions="Start" />

        <BoxView Grid.Column="10"
                 Grid.ColumnSpan="22"
                 Grid.Row="4"
                 Color="BlueViolet" />

        <Label Grid.Column="10"
               Grid.ColumnSpan="20"
               Grid.Row="4"
               x:Name="RestMoneyLbl"
               Text="0,00"
               SemanticProperties.HeadingLevel="Level1"
               FontSize="20"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="End"
               HorizontalOptions="End" />

        <Label Grid.Column="30"
               Grid.ColumnSpan="2"
               Grid.Row="4"
               x:Name="MoneyUnitLbl"
               Text="€"
               SemanticProperties.HeadingLevel="Level1"
               FontSize="20"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Start"
               HorizontalOptions="Start" />

        <Picker Grid.Column="32"
                Grid.ColumnSpan="13"
                Grid.Row="4"
                x:Name="TimeUnitPkr"
                VerticalTextAlignment="Center"
                HorizontalOptions="End"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="20">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Monthly</x:String>
                    <x:String>Yearly</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </Grid>

</ContentPage>
