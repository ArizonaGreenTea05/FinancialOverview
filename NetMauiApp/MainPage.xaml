<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetMauiApp.MainPage"
             xmlns:viewmodel="clr-namespace:NetMauiApp.ViewModels"
             x:DataType="viewmodel:MainViewModel">

    <Grid RowDefinitions="50, 44, *, 50, 44, *, 40"
          ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*"
          Padding="20">

        <Label Grid.Column="0"
               Grid.ColumnSpan="25"
               Grid.Row="0"
               x:Name="AllSalesLbl"
               Text="All"
               FontSize="32"
               HorizontalOptions="Start"
               VerticalOptions="Start"/>

        <CollectionView Grid.Column="0"
                        Grid.ColumnSpan="44"
                        Grid.Row="1"
                        Grid.RowSpan="5"
                        x:Name="AllCv"
                        VerticalOptions="Start"
                        ItemsSource="{Binding AllSales}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type x:String}">
                    <Frame BorderColor="White"
                           Margin="5">
                        <Label Text="{Binding}"
                               FontSize="14"
                               LineBreakMode="WordWrap"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Grid.Column="54"
               Grid.ColumnSpan="45"
               Grid.Row="0"
               x:Name="MonthlySalesLbl"
               Text="Monthly"
               FontSize="32"
               VerticalOptions="Start" />

        <Entry Placeholder="0,00"
               Grid.Column="54"
               Grid.ColumnSpan="6"
               Grid.Row="1"
               x:Name="MonthlySalesEntry"
               FontSize="12"
               Text="{Binding MonthlySalesEntryText}"/>

        <Entry Placeholder="Name"
               Grid.Column="60"
               Grid.ColumnSpan="11"
               Grid.Row="1"
               x:Name="MonthlyNameEntry"
               FontSize="12"
               Text="{Binding MonthlyNameEntryText}"/>

        <Entry Placeholder="Addition"
               Grid.Column="71"
               Grid.ColumnSpan="20"
               Grid.Row="1"
               x:Name="MonthlyAdditionEntry"
               FontSize="12"
               Text="{Binding MonthlyAdditionEntryText}"/>

        <Button Text="{Binding AddBtnText}"
                Grid.Column="91"
                Grid.ColumnSpan="9"
                Grid.Row="1"
                FontSize="16"
                Scale=".8"
                x:Name="MonthlyAddBtn" 
                Command="{Binding AddMonthlyCommand}"/>

        <CollectionView Grid.Column="54"
                        Grid.ColumnSpan="37"
                        Grid.Row="2"
                        x:Name="MonthlyCv"
                        VerticalOptions="Start"
                        ItemsSource="{Binding MonthlySales}">
                
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type x:String}">
                    <Grid RowDefinitions="Auto"
                          ColumnDefinitions="*, Auto"
                          Padding="0,5">
                        <Frame Grid.Column="0"
                               BorderColor="White"
                               Margin="5">
                            <Label Text="{Binding}"
                                   FontSize="14"
                                   LineBreakMode="WordWrap"/>
                        </Frame>
                        <Button Grid.Column="1"
                                Margin="4"
                                BackgroundColor="Red"
                                TextColor="White"
                                Text="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=DeleteBtnText}"
                                x:Name="DeleteEntryBtn"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=DeleteMonthlyCommand}"
                                CommandParameter="{Binding}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Grid.Column="54"
               Grid.ColumnSpan="45"
               Grid.Row="3"
               x:Name="YearlySalesLbl"
               Text="Yearly"
               FontSize="32"
               VerticalOptions="Start" />

        <Entry Placeholder="0,00"
               Grid.Column="54"
               Grid.ColumnSpan="6"
               Grid.Row="4"
               x:Name="YearlySalesEntry"
               FontSize="12" />

        <Entry Placeholder="Name"
               Grid.Column="60"
               Grid.ColumnSpan="11"
               Grid.Row="4"
               x:Name="YearlyNameEntry"
               FontSize="12" />

        <Entry Placeholder="Addition"
               Grid.Column="71"
               Grid.ColumnSpan="20"
               Grid.Row="4"
               x:Name="YearlyAdditionEntry"
               FontSize="12" />

        <Button Text="{Binding AddBtnText}"
                Grid.Column="91"
                Grid.ColumnSpan="9"
                Grid.Row="4"
                FontSize="16"
                Scale=".8"
                x:Name="YearlyAddBtn"
                Command="{Binding AddYearlyCommand}"/>

        <CollectionView Grid.Column="54"
                        Grid.ColumnSpan="37"
                        Grid.Row="5 "
                        x:Name="YearlyCv"
                        VerticalOptions="Start"
                        ItemsSource="{Binding YearlySales}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type x:String}">
                    <Grid RowDefinitions="Auto"
                          ColumnDefinitions="*, Auto"
                          Padding="0,5">
                        <Frame Grid.Column="0"
                               BorderColor="White"
                               Margin="5">
                            <Label Text="{Binding}"
                                   FontSize="14"
                                   LineBreakMode="WordWrap"/>
                        </Frame>
                        <Button Grid.Column="1"
                                Margin="4"
                                BackgroundColor="Red"
                                TextColor="White"
                                Text="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=DeleteBtnText}"
                                x:Name="DeleteEntryBtn"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=DeleteYearlyCommand}"
                                CommandParameter="{Binding}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Grid.Column="0"
               Grid.ColumnSpan="10"
               Grid.Row="6"
               x:Name="RestLbl"
               Text="Rest:"
               FontSize="20"
               VerticalTextAlignment="Center"
               HorizontalOptions="Start" />

        <BoxView CornerRadius="5"
                 Grid.Column="10"
                 Grid.ColumnSpan="22"
                 Grid.Row="6"
                 Color="BlueViolet" />

        <Label Grid.Column="10"
               Grid.ColumnSpan="20"
               Grid.Row="6"
               x:Name="RestMoneyLbl"
               Text="{Binding RestMoney}"
               FontSize="20"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="End"
               HorizontalOptions="End" />

        <Label Grid.Column="30"
               Grid.ColumnSpan="2"
               Grid.Row="6"
               x:Name="MoneyUnitLbl"
               Text="€"
               FontSize="20"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Start"
               HorizontalOptions="Start" />

        <Picker Grid.Column="32"
                Grid.ColumnSpan="13"
                Grid.Row="6"
                x:Name="TimeUnitPkr"
                VerticalTextAlignment="Center"
                HorizontalOptions="End"
                FontSize="20"
                SelectedIndex="{Binding TimeUnit}"
                SelectedIndexChanged="TimeUnitPkr_OnSelectedIndexChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Monthly</x:String>
                    <x:String>Yearly</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </Grid>

</ContentPage>
